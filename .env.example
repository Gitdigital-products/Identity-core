# Database
DATABASE_URL=postgresql://user:password@localhost:5432/identity_core
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# OAuth
OAUTH_CLIENT_ID=default-client
OAUTH_CLIENT_SECRET=default-secret-change-this
OAUTH_REDIRECT_URI=http://localhost:3000/callback

# DID Methods
DID_ETHEREUM_PROVIDER=https://mainnet.infura.io/v3/your-key
DID_POLYGON_PROVIDER=https://polygon-mainnet.infura.io/v3/your-key
DID_SOLANA_RPC=https://api.mainnet-beta.solana.com

# Wallet
WALLET_MNEMONIC="your wallet mnemonic phrase here"
WALLET_ENCRYPTION_KEY=your-wallet-encryption-key

# Logging
LOG_LEVEL=info
NODE_ENV=development

# API
PORT=3000
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# Redis Cache
REDIS_CACHE_TTL=3600
